<p>
  <strong>Origin:</strong>
  <%= @job.origin %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @job.destination %>
</p>

<p>
  <strong>Date:</strong>
  <%= @job.date.strftime("%B %d, %Y") unless @job.date.nil? %>
</p>

<p>
  <strong>Time:</strong>
  <%= @job.time.strftime("%I:%M:%S %p") %>
</p>

<p>
  <strong>Bike:</strong>
  <%= @job.bike.bike_full %>
</p>

<p>
  <strong>Valet:</strong>
  <%= @job.valet_id %>
</p>

<p>
  <strong>Status:</strong>
  <%= @job.status %>
</p>

<% case current_user.user_type %>
  <% when 'client' %>
    <%= link_to 'Edit', edit_job_path(@job) %> |
    <%= link_to 'Delete', @job, method: :delete, data: { confirm: 'Are you sure?' } %> | 
    <%= link_to 'Back', jobs_path %>
<% end %>
<br>

<script>
 var dest_lat = <%= @job.dest_lat %>
 var dest_lng = <%= @job.dest_lng %> 
 var origin_lat = <%= @job.origin_lat %>
 var origin_lng = <%= @job.origin_lng %>
</script>

<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCPJJsoaUUfc25r2O8ZSHIv5pFRHPHgaIc"></script>
<%= javascript_include_tag "map" %>
  <% case current_user.user_type %>
    <% when 'valet' %>
      <div id="map" style="position: relative; overflow: hidden; width: 600px; margin: 0 auto; display: block;"></div>

      <div id="right-panel" style="height: 300px;"></div>
<% end %>






