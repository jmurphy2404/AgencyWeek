<div class="panel-heading">
  <div class="page_title">
    <% case current_user.user_type %>
           <% when 'valet' %>
              <h1>My Assignments</h1>
  </div>
</div>
<div class="panel panel-default">
<div class="panel-body">
<div class="table">  
  <table>
    <thead>
      <tr>
        <th></th>
        <th>Bike</th> 
        <th>Origin</th>
        <th>Destination</th>
        <th>Date</th>
        <th>Time</th>
        <th>Valet Assigned</th>
        <th>Current Status</th>
        <th>Client Name</th>
        <th colspan="4"></th>
  </thead>

   <tbody>
        <% if current_user %>
        <% current_user.jobs.each do |job| %>
        <tr>
          <td><%= link_to job do %>
              <%= fa_icon "search" %>
            <% end %> 
          </td>
          <td><%= job.bike.bike_full %></td>
          <td><%= job.origin %></td>
          <td><%= job.destination %></td>
          <td><%= job.date.strftime("%B %d, %Y") unless job.date.nil? %></td>
          <td><%= job.time.strftime("%I:%M %p") %></td>
          <td><%= job.valet_id %></td>
          <td><%= job.status %></td>
          <td><%= job.user.email %></td>
          <%= form_with(model: job, local: true) do |form| %>
          <td><%= form.select :status, options_for_select([["Order_received", "order_received"], ["In_progress", "in_progress"], ["Completed", "completed"]]) %></td>
          <td><%= submit_tag 'Update Status' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
  <% end %>
  <% end %>
</div>

<div class="table">

  <% case current_user.user_type %>
            <% when 'valet' %>
  <h1>All Assignments</h1>
  <% end %>

  <% case current_user.user_type %>
            <% when 'client' %>
  <h1>My Trips</h1>
  <%= link_to 'Create a new request', new_job_path %>
  <% end %>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Bike</th>
        <th>Origin</th>
        <th>Destination</th>
        <th>Date</th>
        <th>Time</th>
        <th>Valet Assigned</th>
        <th>Current Status</th>
        <th>Client Name</th>
        <th colspan="4"></th>
      </tr>
    </thead>


   <tbody>
        <% @jobs.each do |job| %>
        <tr>
          <td><%= link_to job do %>
              <%= fa_icon "search" %>
            <% end %> 
          </td>
          <td><%= job.bike.bike_full %></td>
          <td><%= job.origin %></td>
          <td><%= job.destination %></td>
          <td><%= job.date.strftime("%B %d, %Y") unless job.date.nil? %></td>
          <td><%= job.time.strftime("%I:%M %p") %></td>
          <% case current_user.user_type %>
            <% when 'valet' %>
              <% if job.valet_id != nil %>
                <td>Already assigned</td>
              <% else %>
                <%= form_with(model: job, local: true) do |form| %>
                <%= form.hidden_field :valet_id, id: :job_valet_id, :value => current_user.id %>
                <td><%= submit_tag 'Work' %></td>
                <% end %>
              <% end %>
          <% end %>
          <% case current_user.user_type %>
              <% when 'client' %> 
                <td><%= job.valet_id %></td>
          <% end %>
          <td><%= job.status %></td>
          <td><%= job.user.email %></td> 
        </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
</div>
</div>

