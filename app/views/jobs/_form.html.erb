<%= form_with(model: job, local: true) do |form| %>
  <% if job.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(job.errors.count, "error") %> prohibited this job from being saved:</h2>

      <ul>
      <% job.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div id="map_coords">
  <div class="field hiddenfield">
    <%= form.label :origin_lat %>
    <%= form.text_field :origin_lat, id: :job_origin_lat, :readonly => true %>
  </div>

  <div class="field hiddenfield">
    <%= form.label :origin_lng %>
    <%= form.text_field :origin_lng, id: :job_origin_lng, :readonly => true %>
  </div>

  <div class="field hiddenfield">
    <%= form.label :dest_lat %>
    <%= form.text_field :dest_lat, id: :job_dest_lat, :readonly => true %>
  </div>

  <div class="field hiddenfield">
    <%= form.label :dest_lng %>
    <%= form.text_field :dest_lng, id: :job_dest_lng, :readonly => true %>
  </div>
</div>

  <div class="field">
    <%= form.label :origin %>
    <%= form.text_field :origin, id: :job_origin %>
  </div>

  <div class="field">
    <%= form.label :destination %>
    <%= form.text_field :destination, id: :job_destination %>
  </div>
  
  <button id="geocoder_submit">Click to save destination and origin</button>

  <div id="job_date" style="visibility: hidden;">
    <%= form.label :date %>
    <%= form.date_select(:date, :order => [:month, :day, :year], id: :job_job_date) %>
  </div>

  <div id="job_time" style="visibility: hidden;">
    <%= form.label :time %>
    <%= form.time_select :time, id: :job_job_time %>
  </div>

  <div id="bike_select" style="visibility: hidden;">
    <%= form.label :bike_id %>
    <%= collection_select(:job, :bike_id, current_user.bikes, :id, :bike_full, { :prompt => 'Select a bike'} ) %>
  </div>

  <div class="actions" id="submit_post" style="visibility: hidden;">
    <%= form.submit id: :submit_post %>
  </div>
<% end %>
