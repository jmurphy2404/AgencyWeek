<p id="notice"><%= notice %></p>

<header class="masthead">
  <div class="intro-body">
    <div class="container">
      <div class="row">
        <div class="col-lg-8 mx-auto">
          <h1 class="brand-heading">My Bikes</h1>
          <%= link_to 'Add a new bike', new_bike_path %>

          <a href="#about" class="btn btn-circle js-scroll-trigger">
            <i class="fa fa-angle-double-down animated"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</header>


<table id="bikes_style">
  <thead>
    <tr>
      <th></th>
      <th>Make</th>
      <th>Model</th>
      <th>Color</th>
      <th>Image</th>
      <th>User</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td title="Details"><%= link_to bike do %>
              <%= fa_icon "search" %>
              <% end %> 
        </td>
        <td><%= bike.make %></td>
        <td><%= bike.model %></td>
        <td><%= bike.color %></td>

        <td><%= image_tag(bike.image) %></td>

        <td><%= bike.user.email %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>


